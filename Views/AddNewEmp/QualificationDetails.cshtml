@model HRM.Models.MasQualificationViewModel
@if (Session["descript"] != null)
{
    {
        ViewBag.Title = "QualificationDetails";
        Layout = "~/Views/Shared/_LayoutMain.cshtml";
        System.Web.Optimization.Scripts.Render("~/bundles/jqueryval");
    }
<link href="~/Content/css/select2.css" rel="stylesheet" />

    using (Html.BeginForm("QualificationDetails", "AddNewEmp", FormMethod.Post))

    {
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Add Employee Qualification</h3>
                    <h6 class="card-subtitle">
                    </h6>
                    <div class="button-box">
                        <button type="button" class="btn btn-secondary btn-outline" data-toggle="tooltip"
                                data-placement="left" title="Add Official Details">
                            <a class="text-white" href="@Url.Action("OfficialDetails", "AddNewEmp")">Official Details</a>
                        </button>
                        <button type="button" class="btn btn-primary btn-outline" data-toggle="tooltip"
                                data-placement="top" title="" data-original-title="Add Qualification">
                            Qualification Details
                        </button>
                        <button type="button" class="btn btn-secondary btn-outline" data-toggle="tooltip"
                                data-placement="top" title="" data-original-title="Add Personal Details">
                            <a class="text-white" href="@Url.Action("PersonalDetails", "AddNewEmp")">
                                Personal Details
                            </a>
                        </button>
                        @*<button type="button" class="btn btn-secondary btn-outline" data-toggle="tooltip"
                                    data-placement="top" title="" data-original-title="Add Contact Details">
                                <a class="text-white" href="@Url.Action("ContactDetails","AddNewEmp")">
                                    Document Details
                                </a>
                            </button>*@
                        <a href="@Url.Action("ViewAllEmp", "AddNewEmp")">
                            <div class="btn btn-success">
                                <h6 align="center" class="fas fa-hand-point-right">
                                    Back to view all employee
                                </h6>
                            </div>
                        </a>
                    </div>
                    <br />
                    <hr />
                    <div class="form-group">
                        @Html.LabelFor(model => model.Tempcode)<span style="color:red">*</span>
                        @Html.DropDownListFor(model => model.Tempcode, ViewBag.pquali as SelectList, "Select Employee id", htmlAttributes: new { id = "selectedemp", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Tempcode, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.id)
                    </div>
                    <div class="form-group">
                        <h4>Select Multiple Qualifications By Pressing Ctrl Key + Mouse Click<span style="color:red">*</span></h4>
                        @Html.ListBoxFor(model => model.SelectedQualifications, new MultiSelectList(Model.AllQualification, "Value", "Text"), new { @multiple = "multiple", @class = "form-control", @size = "15" })
                        @Html.ValidationMessageFor(model => model.SelectedQualifications, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <h4 class="card-title">Is final submission<span style="color:red">*</span></h4>
                        <fieldset class="radio">
                            <label class="radio">
                                Yes
                                @Html.RadioButtonFor(Model => Model.bitQualification, "True", htmlAttributes: new { id = "chkyes", @class = "radio1" })
                            </label>
                            <label class="radio">
                                No
                                @Html.RadioButtonFor(Model => Model.bitQualification, "False", htmlAttributes: new { id = "chkno", @class = "radio1" })
                            </label>
                            @Html.ValidationMessageFor(model => model.bitQualification, "", new { @class = "text-danger" })
                        </fieldset>
                    </div>
                    <input type="submit" value="Save all qualifications" class="btn btn-block btn-success" />
                </div>
            </div>
        </div>
    </div>
    }
}
else
{
    Html.RenderAction("_SessionError1", "Home");
}
@section scripts
    {
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}





