@model HRM.Models.MasQualificationViewModel
@using System.Web
@using System.Web.Optimization

@{
    ViewBag.Title = "Addqualification";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    Html.EnableClientValidation(true);
}


@using (Html.BeginForm("Addqualification", "AddNewEmp", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Add Employee Qualification Details</h3>
                    <h6 class="card-subtitle">
                    </h6>
                    <div class="button-box">
                        <button type="button" class="btn btn-secondary btn-outline" data-toggle="tooltip"
                                data-placement="left" title="Add Official Details">
                            <a class="text-white" href="@Url.Action("OfficialDetails", "AddNewEmp")">Official Details</a>
                        </button>
                        <button type="button" class="btn btn-primary btn-outline" data-toggle="tooltip"
                                data-placement="top" title="" data-original-title="Add Qualification">
                            Qualification Details
                        </button>
                        <button type="button" class="btn btn-secondary btn-outline" data-toggle="tooltip"
                                data-placement="top" title="" data-original-title="Add Personal Details">
                            <a class="text-white" href="@Url.Action("PersonalDetails", "AddNewEmp")">
                                Personal Details
                            </a>
                        </button>
                        @*<button type="button" class="btn btn-secondary btn-outline" data-toggle="tooltip"
                                data-placement="top" title="" data-original-title="Add Contact Details">
                            <a class="text-white" href="@Url.Action("ContactDetails","AddNewEmp")">
                                Document Details
                            </a>
                        </button>*@
                        <a href="@Url.Action("ViewAllEmp","AddNewEmp")">
                            <div class="btn btn-success">
                                <h6 align="center" class="fas fa-hand-point-right">
                                    Back to view all employee
                                </h6>
                            </div>
                        </a>
                    </div>
                    <br />
                    <hr />
                    <div class="form-body">
                        <div class="form-group">
                            @Html.HiddenFor(model => model.id)
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })                         
                        </div>

                        <div class="form-group">
                            <h4>Selected Employee Code</h4>
                            @Html.TextBoxFor(model=>model.Tempcode,  new { @class = "form-control",@readonly="true" })
                        </div>

                        <div class="form-group">
                            <h4>Select multiple qulaifications by pressing ctrl key + mouse click</h4>
                            @Html.ListBoxFor(model => model.SelectedQualifications, new MultiSelectList(Model.AllQualification, "Value", "Text", Model.SelectedQualifications, "Value"), new { @class = "form-control", multiple = "multiple", @selected = "selected" })
                            @Html.ValidationMessageFor(model => model.SelectedQualifications, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <h4 class="card-title">Is final submission</h4>
                            <fieldset class="radio">
                                <label class="radio">
                                    Yes
                                    @Html.RadioButtonFor(model => model.bitQualification, "true", htmlAttributes: new { id = "chkyes", @class = "radio1" })
                                </label>
                                <label class="radio">
                                    No
                                    @Html.RadioButtonFor(model => model.bitQualification, "false", htmlAttributes: new { id = "chkno", @class = "radio1" })
                                </label>
                                @Html.ValidationMessageFor(model => model.bitQualification, "", new { @class = "text-danger" })
                            </fieldset>
                        </div>
                        <input type="submit" value="Add Qualifications" class="btn btn-block btn-success" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

