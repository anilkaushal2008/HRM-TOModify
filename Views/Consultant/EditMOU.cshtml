@model HRM.Models.UpMOUViewModel
@{
    ViewBag.Title = "EditMOU";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
@using (Html.BeginForm("EditMOU", "Consultant", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <br />
    <div class="form-horizontal">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Update MOU view</h3>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(Model => Model.empID)
                @Html.HiddenFor(Model => Model.MOUid)
                <div class="row" style="color:black">
                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.EmpTcode, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.EmpTcode, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.mobile, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.mobile, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.dtEffectFrom, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.dtEffectFrom, new { htmlAttributes = new { @type = "", @class = "form-control", @id = "dateFrom" } })
                                @Html.ValidationMessageFor(model => model.dtEffectFrom, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.dtEffectTo, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.dtEffectTo, new { htmlAttributes = new { @type = "", @class = "form-control", @id = "todate" } })
                                @Html.ValidationMessageFor(model => model.dtEffectTo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.fileName, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.fileName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.fileName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.pdfFile, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.pdfFile, "", new { @type = "file", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.pdfFile, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="form-group" align="center">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Update" class="btn btn-success" />
                        &nbsp;&nbsp;&nbsp;
                        <a class="btn btn-danger" href="@Url.Action("UploadConsultantDoc","Consultant")">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section scripts{
    <script src="~/Content/assets/extra-libs/taskboard/js/jquery-ui.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dateFrom').change(function () {
                // Get the entered date
                var enteredDate = $('#dateFrom').val();
                if (enteredDate) {
                    // Create a Date object from the entered date
                    var date = new Date(enteredDate);

                    // Add five years to the date
                    date.setFullYear(date.getFullYear() + 5);

                    // Format the new date (yyyy-mm-dd)
                    var year = date.getFullYear();
                    //Month Name for giving month name
                    var monthNames = [
                        "January", "February", "March", "April", "May", "June",
                        "July", "August", "September", "October", "November", "December"
                    ];
                    //var month = ('0' + (date.getMonth() + 1)).slice(-2);
                    var monthIndex = date.getMonth();
                    var monthName = monthNames[monthIndex];
                    var day = ('0' + date.getDate()).slice(-2);
                    var newDate = day + '/' + monthName + '/' + year;

                    // Display the new date
                    $('#todate').val(newDate);
                } else {
                    $('#result').text('Please enter a valid date.');
                }
            });
        });

        //for edit date
        $(document).ready(function () {
            $("#dateFrom").datepicker({
                //minDate: puranidt12,
                //maxDate:"+1M",
                dateFormat: 'dd/MM/yy',
                changeMonth: true,
                changeYear: true,
                yearRange: '1990:2030'
            })
        });
        $(document).ready(function () {
            $("#todate").datepicker({
                //minDate: puranidt12,
                //maxDate:"+1M",
                dateFormat: 'dd/MM/yy',
                changeMonth: true,
                changeYear: true,
                yearRange: '1990:2030'
            })
        });
    </script>
}



