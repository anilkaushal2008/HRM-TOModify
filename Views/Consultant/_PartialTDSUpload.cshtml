@model HRM.Models.UploadKRAModelView
<div class="modal fade" id="_PartialTDSUpload" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upload TDS Certificate</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("uploadTDS", "Consultant", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                 @Html.HiddenFor(m => m.empid)
                            <div class="form-group">
                                @Html.Label("Selected Month")
                                @Html.EditorFor(m => Model.DocMasName, new { htmlAttributes = new { @readonly = "resadonly", @id = "filename", @class = "form-control" } })
                            </div>
                        <div class="form-group">
                          @Html.DropDownListFor(m => m.intYear, new List<SelectListItem>
                           {
                               new SelectListItem { Text = "Select financial year", Value = "0" },
                               new SelectListItem { Text = "2024-2025", Value = "2024-2025" },
                               new SelectListItem { Text = "2025-2026", Value = "2025-2026" },
                               new SelectListItem { Text = "2026-2027", Value = "2026-2027" },
                               new SelectListItem { Text = "2027-2028", Value = "2027-2028" }
                           },
                           htmlAttributes: new { @class = "form-control" }
                            )
                                <span id="intYearError" class="text-danger"></span>
                         </div>
                                                            <div class="form-group">
                                                                @Html.LabelFor(m => m.newpdfFile, "Select File")
                                                                @*<input type="file" name="UploadedFile" class="form-control" />*@
                                                                @Html.TextBoxFor(model => model.newpdfFile, "", new { @type = "file", @class = "form-control", @id = "pdffile" })
                                                                @Html.ValidationMessageFor(model => model.newpdfFile, "", new { @class = "text-danger" })
                                                            </div>
                  <button type="submit" class="btn btn-success" style="color:black">Upload</button>}
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jqueryui/jquery-ui.js"></script>

