@model HRM.Models.DocumentViewModel

@{
    ViewBag.Title = "AddNewDoc";
    Layout = "~/Views/Shared/_layout_EmpUserlogin.cshtml";
    Html.EnableClientValidation(true);
}
@*"employeeupload", "NewEmployeeLogin", FormMethod.Post, new { enctype = "multipart/form-data" })*@
@using (Html.BeginForm("employeeupload", "NewEmployeeLogin", FormMethod.Post, new { enctype = "multipart/form-data" }))

{

    @Html.AntiForgeryToken()
    <br />

    <div class="row">
    <div class="col-12">
        @if (TempData["Success"] != null)
        {
            <p align="center" class="alert alert-success" id="successMessage">@TempData["Success"]</p>
        }
        @if (TempData["Error"] != null)
        {
            <p align="center" class="alert alert-danger" id="errormsg">@TempData["Error"]</p>
        }
        @if (Model.BitCompleted == false)
        {
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">New Employee Uploads Details Documents</h3>
                    <div align="right">
                        <a href="@Url.Action("ViewEmpDoc", "NewEmployeeLogin",routeValues:new { @id = Model.empid })">
                            <div class="btn btn-success">
                                <h6 align="center" class="fas fa-hand-point-right">
                                    View all document
                                </h6>
                            </div>
                        </a>
                    </div>
                    <h6 class="card-subtitle">
                    </h6>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.Label("Selected Mobile number")
                                    @Html.Label("emptcode", (string)ViewBag.Mobile, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.Label("Selected Emp Name")
                                    @Html.Label("emptcode", (string)ViewBag.Empname, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <Lable style="color:black">Upload qualification document</Lable>
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.DropDownListFor(model => model.filename, new SelectList(Model.docnamelist, "Value", "Text"), "Select Document", htmlAttributes: new { @class = "form-control" })
                                    @Html.Hidden("hdempid", (string)ViewBag.EmpID)
                                    @Html.ValidationMessageFor(model => model.filename, "", new { @class = "text-danger" })
                                    @*@Html.DropDownListFor(model => model.docnamelist, (IEnumerable<SelectListItem>)ViewBag.SelectedQuali,"Select doc", htmlAttributes: new { @class = "form-control" })*@
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="ct-horizontal">
                                    @Html.TextBoxFor(model => model.pdfFile, "", new { @type = "file", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.pdfFile, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div align="center" class="form-group">
                            <h5 class="card-title">Is final submission<span style="color:red">*</span></h5>
                            <fieldset class="radio">
                                <label class="radio">
                                    Yes
                                    @Html.RadioButtonFor(Model => Model.BitCompleted, "true", htmlAttributes: new { id = "chkyes", @class = "radio1" })
                                </label>
                                <label class="radio">
                                    No
                                    @Html.RadioButtonFor(Model => Model.BitCompleted, "false", htmlAttributes: new { id = "chkno", @class = "radio1" })
                                </label>
                                @Html.ValidationMessageFor(model => model.BitCompleted, "", new { @class = "text-danger" })
                            </fieldset>
                        </div>
                        <div align="center">
                            <input type="submit" value="Upload qualification document" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">New Employee Uploads Details Documents</h3>
                    <div align="center">
                        <a href="@Url.Action("ViewEmpDoc", "NewEmployeeLogin")">
                            <div class="btn btn-success">
                                <h6 align="center" class="fas fa-hand-point-right">
                                    View all document
                                </h6>
                            </div>
                        </a>
                    </div>
                    <div align="center"><h3>Your all document uploaded successfully, You can view all document from View all document button</h3></div>
                </div>
            </div>
        }
    </div>
    </div>
}


