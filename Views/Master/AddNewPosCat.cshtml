@model HRM.Models.tblPositionCategoryMas

@{
    ViewBag.Title = "AddNewPosCat";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
        @if (TempData["Success"] != null)
        {
            <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
        }
        @if (TempData["ModelError"] != null)
        {
            <p class="alert alert-danger" id="successMessage">@TempData["ModelError"]</p>
        }
        <h4 class="col-md-10" style="color:black">Add new position category master</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Enter position category name", htmlAttributes: new { @class = "control-label col-md-8" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.vchPosCatName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.vchPosCatName, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Record" class="btn btn-primary" />
            <div align="center">
                <a href="@Url.Action("ViewPosCategory", "Master")">
                    <div class="btn btn-primary">
                        <h6 align="center" class="fas fa-hand-point-right">
                            View all position categories
                        </h6>
                    </div>
                </a>
            </div>
        </div>
    </div>
}

@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}



