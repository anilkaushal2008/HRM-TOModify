@model IEnumerable<HRM.Models.tblPositionCategoryMas>
@if (Session["descript"] != null)
{
    {
        ViewBag.Title = "ViewAllMap";
        Layout = "~/Views/Shared/_LayoutMain.cshtml";
    }


<div class="col-lg-12">
    <div class="card">
        @if (TempData["Success"] != null)
        {
            <p class="alert alert-success" id="successMessage" align="center">@TempData["Success"]</p>
        }
        @if (TempData["DeleteDone"] != null)
        {
            <p class="alert alert-success" id="successMessage" align="center">@TempData["DeleteDone"]</p>
        }
        <div class="card-body">
            <h3 class="card-title">All position mapping master view</h3>
            <div align="right">
                @{ string newmap = Session["Pdnew"].ToString();
                    if (newmap == "True")
                    {
                <a href="@Url.Action("AddNewMapping", "Master")">
                    <div class="btn btn-primary">
                        <h6 class="fas fa-hand-point-right"></h6>
                        <h6 align="center" class="fa fa-plus">
                            Create new mapping
                        </h6>
                    </div>
                </a>
                        }
                    }
            </div>
            <div class="table-responsive">
                <table class="table table-sm col-12">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th>
                                Position name
                            </th>
                            <th>
                                Created By
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody class="border border-primary">
                        @if (TempData["Empty"] != null)
                        {
                            <p class="alert alert-danger" id="successMessage">@TempData["Empty"]</p>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.vchPosCatName)
                                    </td>
                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.tblDesignationMas.vchdesignation)
                                    </td>*@
                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.dtcreated)
                                    </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.vchcreatedby)
                                    </td>
                                    <td>
                                        @{ string Mapedit = Session["Pdedit"].ToString();
                                            if (Mapedit == "True")
                                            {
                                                <a href="@Url.Action("EditMapp", "Master", new { id = item.intid })">
                                                    <h6 align="center" class="fa fa-edit" data-placement="left" data-toggle="tooltip" data-original-title="EditMapping"></h6>
                                                </a>
                                            }
                                        }
                                        &nbsp;
                                        @{ string Mapdel = Session["Pddelete"].ToString();
                                            if (Mapdel == "True")
                                            { <a href="@Url.Action("DeleteMapp", "Master", new { id = item.intid })">
                                                    <h6 align="center" class="fa fa-trash" data-placement="right" data-toggle="tooltip" data-original-title="DeleteMapping"></h6>
                                                </a>
                                                }
                                            }
                                      </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
}
else
{
    Html.RenderAction("_SessionError1", "Home");
}
@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
