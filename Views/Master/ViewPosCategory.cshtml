@model IEnumerable<HRM.Models.tblPositionCategoryMas>
@if (Session["descript"] != null)
{
    {
        ViewBag.Title = "ViewPosCategory";
        Layout = "~/Views/Shared/_LayoutMain.cshtml";
    }

    <div class="col-lg-12">
        <div class="card">
            @if (TempData["Success"] != null)
            {
                <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
            }
        <div class="card-body">
            <h3 class="card-title">All position category master view</h3>
            @{ string newpos = Session["PosNew"].ToString();
                if (newpos == "True")
                {
                    <div align="right">
                        <a href="@Url.Action("AddNewPosCat", "Master")">
                            <div class="btn btn-primary">
                                <h6 class="fas fa-hand-point-right"></h6>
                                <h6 align="center" class="fa fa-plus">
                                    Create new
                                </h6>
                            </div>
                        </a>
                    </div>
                }
            }
            <div class="table-responsive">
                <table class="table table-sm col-12">
                    <thead class="bg-primary text-white col-12">
                        <tr>
                            <th>
                                Position Name
                            </th>
                            <th>
                                CreatedBy
                            </th>
                            <th>
                                Creation Date
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody class="border border-primary">
                        @if (TempData["Empty"] != null)
                        {
                            <p class="alert alert-danger" id="successMessage">@TempData["Empty"]</p>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.vchPosCatName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.vchcreatedby)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.dtcreated)
                                    </td>
                                    <td>
                                        @{ string posedit = Session["PosEdit"].ToString();
                                            if (posedit == "True")
                                            {
                                                <a href="@Url.Action("EditPosCategory", "Master", new { id = item.intid })">
                                                    <h6 align="center" class="fa fa-edit" data-placement="left" data-toggle="tooltip" data-original-title="Edit"></h6>
                                                </a>
                                            }
                                        }
                                        &nbsp; &nbsp;
                                        @{ string posdel = Session["PosDelete"].ToString();
                                            if (posdel == "True")
                                            { <a href="@Url.Action("DeletePosCategory", "Master", new { id = item.intid })">
                                                    <h6 align="center" class="fa fa-trash" data-placement="right" data-toggle="tooltip" data-original-title="Delete"></h6>
                                                </a>
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        </div>
    </div>
}
else
{
    Html.RenderAction("_SessionError1", "Home");
}
@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
