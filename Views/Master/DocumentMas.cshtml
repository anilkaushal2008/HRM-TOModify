@model HRM.Models.tblDocMas
@if (Session["descript"] != null)
{
    {
        ViewBag.Title = "DocumentMas";
        Layout = "~/Views/Shared/_LayoutMain.cshtml";
        Html.EnableClientValidation(true);
    }


    using (Html.BeginForm("DocumentMas", "Master"))
    {
    @Html.AntiForgeryToken()
    <br />
    <div class="form-horizontal col-12">
        <h4 style="color:black">Document Master Setup</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.vchdocname, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.vchdocname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.vchdocname, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
        <div class="form-group">
            <div class="col-10">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-dark" />
                    @{ string docview = Session["Docview"].ToString();
                        if (docview == "True")
                        {
                    <div align="center">
                        <a href="@Url.Action("ViewAllDoc", "Master")">
                            <div class="btn btn-primary">
                                <h6 align="center" class="fas fa-hand-point-right">
                                    View All Document
                                </h6>
                            </div>
                        </a>
                    </div>
                            }
                        }
                </div>
            </div>
        </div>
    }
}
else
{
    Html.RenderAction("_SessionError1", "Home");
}
