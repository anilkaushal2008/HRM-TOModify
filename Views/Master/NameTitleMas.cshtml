@using System.Web
@using System.Web.Optimization
@model HRM.Models.tblTitleMas
@if (Session["descript"] != null)
{
    {
        ViewBag.Title = "NameTitleMas";
        Layout = "~/Views/Shared/_LayoutMain.cshtml";
        Html.EnableClientValidation(true);
    }

    using (Html.BeginForm("NameTitleMas","Master",FormMethod.Post))
    {
        <br />
        if (TempData["Success"] != null)
        {
            <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
        }
        <div class="col-10">
            <div class="title"><h4>Name Title Master Setup</h4></div>
            @*<li>View All Title<a class="collapse" href="@Url.Action("ViewAllTitleMas","Master")"> </a></li>*@

        </div>
        <div class="form-horizontal col-12">

            <hr />
            <br />
            <div class="form-group">
                <lable class="control-label col-md-2">Enter Title Name</lable>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.vchname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.vchname, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-dark" />
                    @{ string TitleMas1 = Session["ViewTitle"].ToString();
                        if (TitleMas1 == "True")
                        {
                            <div align="center">
                                <a href="@Url.Action("ViewAllTitleMas", "Master")">
                                    <div class="btn btn-primary">
                                        <h6 align="center" class="fas fa-hand-point-right">
                                            View All Title
                                        </h6>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    }
}
else
{
    Html.RenderAction("_SessionError1", "Home");
}
@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
}







