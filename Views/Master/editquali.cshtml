@model HRM.Models.tblQualiMas
@if (Session["descript"] != null)
{
    {
        ViewBag.Title = "editquali";
        Layout = "~/Views/Shared/_LayoutMain.cshtml";
        Html.EnableClientValidation(true);
    }



    using (Html.BeginForm("editquali", "Master"))
    {
        @Html.AntiForgeryToken()
        <br />

        <div class="form-horizontal col-12">
            <h4>Edit qualification master setup </h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.intqualiid)

            <div class="form-group">
                @Html.LabelFor(model => model.vchqname, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.vchqname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.vchqname, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Update" class="btn btn-primary" />
                    <div align="center">
                        @{ string Quali = Session["ViewQualiDocMas"].ToString();
                            if (Quali == "True")
                            {
                                <a href="@Url.Action("ViewAllQualificationMas", "Master")">
                                    <div class="btn btn-primary">
                                        <h6 align="center" class="fas fa-hand-point-right">
                                            View All Qualification
                                        </h6>
                                    </div>
                                </a>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
Html.RenderAction("_SessionError1", "Home");
}