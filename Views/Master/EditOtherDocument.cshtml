@model HRM.Models.tblOtherDocumentMas
@if(Session["descript"] != null)
{
    {
        ViewBag.Title = "EditOtherDocument";
        Layout = "~/Views/Shared/_LayoutMain.cshtml";
    }

using(Html.BeginForm("EditOtherDocument", "Master", FormMethod.Post))
{
        @Html.AntiForgeryToken()

<div class="form-horizontal col-12">
    <br />
    @if (TempData["Success"] != null)
    {
        <p align="center" class="alert alert-success" id="successMessage">@TempData["Success"]</p>
    }
    @if (TempData["Error"] != null)
    {
        <p align="center" class="alert alert-danger" id="ErrorMessage">@TempData["Error"]</p>
    }
    <h4 style="color:black;font-weight:bold" align="center">Update other document master</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.intid)
</div>
        <div class="col-12">
            <div class="row">
                <div class="col">
                    @{ string ViewDept = Session["ViewDepartmentMas"].ToString();
                        if (ViewDept == "True")
                        {
                            <div align="right">
                                <a href="@Url.Action("ViewOtherDoc", "Master")">
                                    <div class="btn btn-success">
                                        <h6 align="right" class="fas fa-hand-point-right">
                                            View All Other Documents
                                        </h6>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-8">
                    <div class="form-group">
                        @Html.LabelFor(model => model.vchDocName, htmlAttributes: new { @class = "control-label col-md-8" })
                        @Html.EditorFor(model => model.vchDocName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.vchDocName, "", new { @class = "text-danger" })
                    </div>
                </div>         
                <div class="col-4">
                    <div class="form-group" align="center">
                        @Html.Label("Allow Multiple Uploads", htmlAttributes: new { @class = "control-label col-md-8" })
                        @Html.EditorFor(model => model.bitISMultipleRecords, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.bitISMultipleRecords, "", new { @class = "text-danger" })
                    </div>
                </div>              
            </div>
            <hr />
            <div class="row">
                <div class="col">
                    <input type="submit" value="Update" class="btn btn-success btn-block" />
                </div>
            </div>
        </div>
    }
}
else
{
    Html.RenderAction("_SessionError1", "Home");
}


