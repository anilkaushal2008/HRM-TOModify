@model HRM.Models.tblDocMas
@if (Session["descript"] != null)
{
    {
        ViewBag.Title = "EditDoc";
        Layout = "~/Views/Shared/_LayoutMain.cshtml";
        Html.EnableClientValidation(true);
    }



    using (Html.BeginForm("EditDoc", "Master"))
    {
    @Html.AntiForgeryToken()
    <br />

    <div class="form-horizontal col-12">
        <h4>Edit document master setup</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.intid)

        <div class="form-group">
            @Html.LabelFor(model => model.vchdocname, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.vchdocname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.vchdocname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-primary" />
                @{ string Docview = Session["Docview"].ToString();
                    if (Docview == "True")
                    {
                <div align="center">
                    <a href="@Url.Action("ViewAllDoc", "Master")">
                        <div class="btn btn-primary">
                            <h6 align="center" class="fas fa-hand-point-right">
                                View All Document
                            </h6>
                        </div>
                    </a>
                </div>
                        }
                    }
            </div>
        </div>
    </div>
    }
}
else
{
    Html.RenderAction("_SessionError1", "Home");
}

