        <hr />
            <div class="card">
                <div class="card-body">
                    <div class="card-title">

                    </div>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead class="bg-facebook text-white">

                                <tr>
                                    <th>
                                        Emp Name
                                    </th>
                                    <th>
                                        Mobile
                                    </th>
                                    <th>
                                        WorkedArea
                                    </th>
                                    <th>
                                        Edit Actions
                                    </th>
                                </tr>
                            <tbody class="">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="color:black">
                                            @Html.DisplayFor(modelItem => item.vchName)
                                        </td>
                                        <td style="color:black">
                                            @Html.DisplayFor(modelItem => item.vchMobile)
                                        </td>
                                        <td style="color:black">
                                            @Html.DisplayFor(modelItem => item.vchWorkedArea)
                                        </td>
                                        <td>
                                            @{
                                                if (item.bitIsByPassEntry != true)
                                                {
                                                    <a href="@Url.Action("Updocdetail", "Authorization", new { id = item.intid })"><i class="fas fa-hand-point-right" style="color:orange"> Document/Personal Detail </i></a><br />
                                                    <a href="@Url.Action("EditOfficial", "Authorization", new { id = item.intid })"><i class="fas fa-hand-point-right" style="color:orange"> Official Details </i></a><br />
                                                }
                                                else
                                                {
                                                    <a href="@Url.Action("UpByPassDoc", "Authorization", new { id = item.intid })"><i class="fas fa-hand-point-right" style="color:orange"> ByPass Emp Document Details </i></a><br />
                                                }
                                            }
                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                    <br />
                    <div>
                        <h3 style="color:black" class="fas fa-hand-point-right">
                            <input type="checkbox" id="author" onclick="" class="form-group" />&nbsp;Click here if you want to send authorization again?
                        </h3>
                    </div>
                    <div id="sendauthor">
                        @{Html.RenderAction("PartialResendAuthorization"); }
                    </div>
                </div>
            </div>
        </div>
    </div>
@section Scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#sendauthor").attr("hidden", true);
        });

        $("#author").click(function () {
            if (this.checked) {
                $("#sendauthor").attr("hidden", false);
            }
            else {
                $("#sendauthor").attr("hidden", true);
            }
        });
    </script>
}
