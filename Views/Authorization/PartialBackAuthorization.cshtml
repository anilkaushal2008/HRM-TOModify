@model HRM.Models.AuthorBackViewModel
@if (Session["descript"] != null)
{
    Html.EnableClientValidation(true);
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
    @Html.HiddenFor(model => model.id)

    <h4 style="color: black; font-weight: bold;color:Highlight">Re-Consider Actions</h4>
    <div class="form-group" align="center">
        <h5 class="card-title" align="center">Do you want HR to re-consider candidate?<span style="color:crimson">*</span></h5>
        <fieldset class="radio" hidden>
            <label class="radio">
                Yes
                @Html.RadioButtonFor(model => model.bitAuthorBack, "Yes", htmlAttributes: new { @checked = "checked", @id = "chkyes", @class = "radio" })
            </label><br />
            @*<label class="radio">
                No
                @Html.RadioButtonFor(model => model.bitAuthorBack, "No", htmlAttributes: new { @id = "chkno", @class = "radio" })
            </label><br />*@
            @*@Html.ValidationMessageFor(model => model.bitAuthorBack, "", new { @class = "text-danger" })*@
        </fieldset>
    </div>
    <div>
        <h5 style="color:black">Enter message to HR/HR Team<span style="color:red"> (max length 2000 characters)</span></h5>
        @Html.TextAreaFor(model => model.vchReconsiderRemarks, htmlAttributes: new { @id = "txtcancel", @class = "form-control", @rows = "7", @size = "1500" })
        @Html.ValidationMessageFor(model => model.vchReconsiderRemarks, "", new { @class = "text-danger" })
        <br />
    </div>
    <div align="center">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" id="postdata" class="btn btn-outline-success" />
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <a class="btn btn-outline-dark" href="@Url.Action("ViewAssignAuthorization", "Authorization")"> Back </a>
            </div>
        </div>
    </div>
</div>
    }
}
else
{
    Html.RenderAction("_SessionError1", "Home");
}
@section Scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}



