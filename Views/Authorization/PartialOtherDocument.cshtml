@model IEnumerable<HRM.Models.tblOtherDocDetail>
@if (Session["descript"] != null)
{


<div class="card">
        <div class="card-body">
            <h4 class="card-title">Employee Other Document Detail</h4>
            <table class="table table-sm">
                <thead class="bg-facebook text-white col-12">
                    <tr>
                        @*<td>
                                @Html.DisplayNameFor(Model => Model.fk_intdocid)
                            </td>*@
                        <th>
                            Document Name
                        </th>

                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="border border-dark">
                    @if (Model.Count() != 0)
                    {
                        foreach (var item in Model)
                        {
                        <tr style="color:black">
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.fk_intdocid)
                                </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.vchDocName)
                            </td>

                            <td>
                                <a href="@Url.Content("~/Content/Uploads/OtherDocuments/" + @item.vchfilename)" target="_blank">View</a>
                            </td>
                        </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    Html.RenderAction("_SessionError1", "Home");
}


