@using System.Web.Optimization
@using System.Web.SessionState
@using System.Web.UI.WebControls
@using System.Web.Mvc
<!DOCTYPE html>
<html lang="en" class="light">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>HRMS Dashboard</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        primary: { 50: '#f0f9ff', 100: '#e0f2fe', 600: '#0284c7', 700: '#0369a1', 800: '#075985' },
                        midnight: {
                            50: '#f8fafc',
                            800: '#1e293b',
                            900: '#0f172a',
                            950: '#020617'
                        }
                    }
                }
            }
        }
    </script>

    <!-- Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Legacy Styles -->
    <link href=@Url.Content("~/Content/assets/extra-libs/c3/c3.min.css") rel="stylesheet">
    <link href=@Url.Content("~/Content/dist/css/style.min.css") rel="stylesheet" />

    <style type="text/css">
        body {
            font-size: 16px;
        }

        .sidebar-submenu {
            display: none;
        }

            .sidebar-submenu.show {
                display: block;
            }

        .transition-transform {
            transition: transform 0.2s ease;
        }

        .rotate-90 {
            transform: rotate(90deg);
        }

        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: transparent;
        }

        ::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 10px;
        }

        .dark ::-webkit-scrollbar-thumb {
            background: #334155;
        }

        /* Header Dropdown Styling */
        .header-dropdown {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            z-index: 100;
        }

        .group:hover .header-dropdown {
            display: block;
        }
    </style>
</head>
<body class="bg-slate-50 text-slate-900 dark:bg-midnight-950 dark:text-slate-200 transition-colors duration-200">

    <div id="main-wrapper" class="flex min-h-screen">

        <!-- SIDEBAR -->
        <aside id="sidebar" class="w-72 bg-white dark:bg-midnight-900 border-r border-slate-200 dark:border-midnight-800 transition-all fixed h-full z-50 md:relative overflow-y-auto">
            <div class="h-16 flex items-center justify-between px-6 border-b border-slate-100 dark:border-midnight-800">
                <a href="@Url.Action("Index", "Dashboard")" class="flex items-center space-x-2">
                    @{ var code = Session["id"]?.ToString(); }
                    @if (code == "22")
                    {<img src="~/Content/assets/images/Logovth.jpg" class="h-10" /> }
                    else
                    { <img src="~/Content/assets/images/logo1.png" class="h-8" />}
                    <span class="font-bold text-xl tracking-tight text-primary-600 dark:text-primary-400">Portal</span>
                </a>
                <button onclick="toggleSidebar()" class="md:hidden text-slate-500">
                    <i data-lucide="x"></i>
                </button>
            </div>

            <div class="px-4 py-6 space-y-2">
                <a href="@Url.Action("Index", "Dashboard")" class="flex items-center space-x-3 p-3 rounded-xl bg-primary-50 dark:bg-primary-900/10 text-primary-600 dark:text-primary-400 font-bold">
                    <i data-lucide="layout-dashboard" class="w-5 h-5"></i>
                    <span>Dashboard Overview</span>
                </a>

                <a href="@Url.Action("AadhaarSearch", "DashBoard")" class="flex items-center space-x-3 p-3 rounded-xl hover:bg-slate-50 dark:hover:bg-midnight-800/50 text-slate-600 dark:text-slate-400 transition-all">
                    <i data-lucide="search" class="w-5 h-5 text-primary-500"></i>
                    <span class="font-medium">Aadhaar Search</span>
                </a>

                <div class="pt-6 pb-2 px-3 text-[11px] font-bold text-slate-400 dark:text-slate-500 uppercase tracking-widest">Departments</div>

                <!-- Requisition Corner -->
                @{ if (Session["Requisition"] != null && Session["Requisition"].ToString() == "True")
                    {
                        <div class="sidebar-item">
                            <button onclick="toggleSubmenu('req-corner')" class="w-full flex items-center justify-between p-3 rounded-xl hover:bg-slate-50 dark:hover:bg-midnight-800/50 transition-all text-slate-700 dark:text-slate-300">
                                <div class="flex items-center space-x-3"><i data-lucide="clipboard-list" class="w-5 h-5 text-blue-500"></i><span class="font-medium">Requisition Corner</span></div>
                                <i data-lucide="chevron-right" class="w-4 h-4 transition-transform" id="req-corner-icon"></i>
                            </button>
                            <div id="req-corner" class="sidebar-submenu pl-9 space-y-1 mt-1">
                                <a href="@Url.Action("NewRequisition", "Assesment")" class="block py-2 text-sm text-slate-500 hover:text-primary-600">New Requisition</a>
                                <a href="@Url.Action("ViewAllReq", "Assesment")" class="block py-2 text-sm text-slate-500 hover:text-primary-600">View All Requisition</a>
                            </div>
                        </div>
                    }}

                <!-- Assessment Corner -->
                @{ if (Session["AssNew"] != null || Session["AssAssignedView"] != null || Session["AssStatus"] != null || Session["AllowDocUpload"] != null || Session["PendingDocView"] != null || Session["AssCompletedView"] != null)
                    {
                        <div class="sidebar-item">
                            <button onclick="toggleSubmenu('ass-corner')" class="w-full flex items-center justify-between p-3 rounded-xl hover:bg-slate-50 dark:hover:bg-midnight-800/50 transition-all text-slate-700 dark:text-slate-300">
                                <div class="flex items-center space-x-3"><i data-lucide="file-check" class="w-5 h-5 text-purple-500"></i><span class="font-medium">Assessment Corner</span></div>
                                <i data-lucide="chevron-right" class="w-4 h-4 transition-transform" id="ass-corner-icon"></i>
                            </button>
                            <div id="ass-corner" class="sidebar-submenu pl-9 space-y-1 mt-1">
                                @if (Session["AssNew"]?.ToString() == "True")
                                {<a href="@Url.Action("AssignNewAssement", "Assesment")" class="block py-2 text-sm text-slate-500 hover:text-primary-600">New Assessment</a>}
                                @if (Session["AssAssignedView"]?.ToString() == "True")
                                {<a href="@Url.Action("ViewAssignedAss", "Assesment")" class="block py-2 text-sm text-slate-500 hover:text-primary-600">Assigned Assessment</a>}
                                @if (Session["AssStatus"]?.ToString() == "True")
                                {<a href="@Url.Action("ViewAllAssStatus", "Assesment")" class="block py-2 text-sm text-slate-500 hover:text-primary-600">Assessments Status</a>}
                                @if (Session["AllowDocUpload"]?.ToString() == "True")
                                {<a href="@Url.Action("AllComAss", "Assesment")" class="block py-2 text-sm text-slate-500 hover:text-primary-600">Allow Upload</a>}
                            </div>
                        </div>
                    }}

                <!-- HR Corner -->
                @{ if (Session["ViewActiveEmp"] != null || Session["DeactiveEmp"] != null || Session["ViewLeftEmp"] != null || Session["HrAdmin"] != null)
                    {
                        <div class="sidebar-item">
                            <button onclick="toggleSubmenu('hr-corner')" class="w-full flex items-center justify-between p-3 rounded-xl hover:bg-slate-50 dark:hover:bg-midnight-800/50 transition-all text-slate-700 dark:text-slate-300">
                                <div class="flex items-center space-x-3"><i data-lucide="users" class="w-5 h-5 text-indigo-500"></i><span class="font-medium">HR Corner</span></div>
                                <i data-lucide="chevron-right" class="w-4 h-4 transition-transform" id="hr-corner-icon"></i>
                            </button>
                            <div id="hr-corner" class="sidebar-submenu pl-9 space-y-1 mt-1">
                                @if (Session["ViewActiveEmp"]?.ToString() == "True")
                                {<a href="@Url.Action("ActiveView", "DashBoard")" class="block py-2 text-sm text-slate-500 hover:text-primary-600">Active Employees</a>}
                                @if (Session["DeactiveEmp"]?.ToString() == "True")
                                {<a href="@Url.Action("EmployeeDeactive", "Dashboard")" class="block py-2 text-sm text-slate-500 hover:text-primary-600">Change Status</a>}
                                @if (Session["ViewLeftEmp"]?.ToString() == "True")
                                {<a href="@Url.Action("LeftView", "Dashboard")" class="block py-2 text-sm text-slate-500 hover:text-primary-600">Left Employees</a>}
                                @if (Session["HrAdmin"]?.ToString() == "True")
                                {<a href="@Url.Action("GenCodeExisting", "Authorization")" class="block py-2 text-sm text-slate-500 hover:text-primary-600">Generate Emp Code</a>}
                            </div>
                        </div>
                    }}

                <!-- Leave Management -->
                @{ if (Session["MainAdmin"] != null || Session["HrAdmin"] != null || Session["DeptHOD"] != null)
                    {
                        <div class="sidebar-item">
                            <button onclick="toggleSubmenu('leave-corner')" class="w-full flex items-center justify-between p-3 rounded-xl hover:bg-slate-50 dark:hover:bg-midnight-800/50 transition-all text-slate-700 dark:text-slate-300">
                                <div class="flex items-center space-x-3"><i data-lucide="calendar" class="w-5 h-5 text-orange-500"></i><span class="font-medium">Leave Corner</span></div>
                                <i data-lucide="chevron-right" class="w-4 h-4 transition-transform" id="leave-corner-icon"></i>
                            </button>
                            <div id="leave-corner" class="sidebar-submenu pl-9 space-y-1 mt-1">
                                @if (Session["MainAdmin"]?.ToString() == "True")
                                {<a href="@Url.Action("TypeIndex", "Leave")" class="block py-2 text-sm text-slate-500 hover:text-primary-600">Leave Master</a>}
                                <a href="@Url.Action("ApprovedLeave", "Dashboard")" class="block py-2 text-sm text-slate-500 hover:text-primary-600">Approved Leaves</a>
                                <a href="@Url.Action("LeaveStatus", "Dashboard")" class="block py-2 text-sm text-slate-500 hover:text-primary-600">Leave Status</a>
                            </div>
                        </div>
                    }}

                <!-- DNB Corner -->
                @{ if (Session["DNBCORNER"] != null && Session["DNBCORNER"].ToString() == "True")
                    {
                        <div class="sidebar-item">
                            <button onclick="toggleSubmenu('dnb-corner')" class="w-full flex items-center justify-between p-3 rounded-xl hover:bg-slate-50 dark:hover:bg-midnight-800/50 transition-all text-slate-700 dark:text-slate-300">
                                <div class="flex items-center space-x-3"><i data-lucide="graduation-cap" class="w-5 h-5 text-emerald-500"></i><span class="font-medium">DNB Corner</span></div>
                                <i data-lucide="chevron-right" class="w-4 h-4 transition-transform" id="dnb-corner-icon"></i>
                            </button>
                            <div id="dnb-corner" class="sidebar-submenu pl-9 space-y-1 mt-1">
                                @if (Session["FEE-STRUCTURE"]?.ToString() == "True")
                                {<a href="@Url.Action("DNbEmpList", "DNB")" class="block py-2 text-sm text-slate-500 hover:text-primary-600">Fee Structure</a>}
                                @if (Session["FEE-VERIFICATION"]?.ToString() == "True")
                                {<a href="@Url.Action("FeeVerification", "DNB")" class="block py-2 text-sm text-slate-500 hover:text-primary-600">Verification</a>}
                            </div>
                        </div>
                    }}

                <div class="pt-10 border-t border-slate-100 dark:border-midnight-800 mt-10">
                    <a href="@Url.Action("Index", "Home")" class="flex items-center space-x-3 p-3 rounded-xl text-red-500 hover:bg-red-50 dark:hover:bg-red-900/10 font-bold text-sm">
                        <i data-lucide="log-out" class="w-5 h-5"></i>
                        <span>Logout System</span>
                    </a>
                </div>
            </div>
        </aside>

        <!-- CONTENT AREA -->
        <main class="flex-grow flex flex-col min-w-0 bg-slate-50 dark:bg-midnight-950 transition-all overflow-hidden">

            <!-- HEADER -->
            <header class="h-16 bg-white dark:bg-midnight-900 border-b border-slate-200 dark:border-midnight-800 flex items-center justify-between px-6 sticky top-0 z-40">
                <div class="flex items-center space-x-6">
                    <button onclick="toggleSidebar()" class="p-2 rounded-lg hover:bg-slate-100 dark:hover:bg-midnight-800 text-slate-600 dark:text-slate-400">
                        <i data-lucide="menu" class="w-6 h-6"></i>
                    </button>

                    <!-- TOP NAVIGATION MASTERS -->
                    <nav class="hidden lg:flex items-center space-x-1">
                        <!-- Employee Master Setup -->
                        @{ if (Session["NameTitle"] != null || Session["DepartmentMas"] != null || Session["DesignationMas"] != null || Session["PosView"] != null || Session["QualiDocMas"] != null || Session["Docview"] != null)
                            {
                                <div class="relative group">
                                    <button class="flex items-center space-x-1 px-4 py-2 rounded-lg text-sm font-semibold text-slate-600 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-midnight-800">
                                        <span>Employee Master</span>
                                        <i data-lucide="chevron-down" class="w-4 h-4 text-slate-400"></i>
                                    </button>
                                    <div class="header-dropdown w-64 bg-white dark:bg-midnight-900 border border-slate-200 dark:border-midnight-800 rounded-xl shadow-2xl py-2 mt-1">
                                        @if (Session["NameTitle"]?.ToString() == "True")
                                        {<a href="@Url.Action("ViewAllTitleMas", "Master")" class="block px-4 py-2 text-sm text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-midnight-800">Name Title Master</a>}
                                        @if (Session["DepartmentMas"]?.ToString() == "True")
                                        {
                                            <a href="@Url.Action("ViewAllDept", "Master")" class="block px-4 py-2 text-sm text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-midnight-800">Department Master</a>
                                            <a href="@Url.Action("NewDeptMapping", "Master")" class="block px-4 py-2 text-sm text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-midnight-800">Department Mapping</a>
                                        }
                                        @if (Session["DesignationMas"]?.ToString() == "True")
                                        {<a href="@Url.Action("ViewAllDesignationMas", "Master")" class="block px-4 py-2 text-sm text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-midnight-800">Designation Master</a>}
                                        @if (Session["PosView"]?.ToString() == "True")
                                        {
                                            <a href="@Url.Action("ViewDesiQuali", "Master")" class="block px-4 py-2 text-sm text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-midnight-800">Designation Qual</a>
                                            <a href="@Url.Action("ViewPosCategory", "Master")" class="block px-4 py-2 text-sm text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-midnight-800">Position Category</a>
                                        }
                                    </div>
                                </div>
                            }}

                        <!-- User Master Setup -->
                        @{ if (Session["GpMaster"] != null || Session["ViewGpMaster"] != null || Session["AssignUserPerMas"] != null || Session["ViewAllEmpUser"] != null)
                            {
                                <div class="relative group">
                                    <button class="flex items-center space-x-1 px-4 py-2 rounded-lg text-sm font-semibold text-slate-600 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-midnight-800">
                                        <span>User Master</span>
                                        <i data-lucide="chevron-down" class="w-4 h-4 text-slate-400"></i>
                                    </button>
                                    <div class="header-dropdown w-64 bg-white dark:bg-midnight-900 border border-slate-200 dark:border-midnight-800 rounded-xl shadow-2xl py-2 mt-1">
                                        @if (Session["GpMaster"]?.ToString() == "True")
                                        {<a href="@Url.Action("CreateNewGp", "Group")" class="block px-4 py-2 text-sm text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-midnight-800">Create Group Master</a>}
                                        @if (Session["AssignUserPerMas"]?.ToString() == "True")
                                        {<a href="@Url.Action("AssignNewUserPermission", "UserPermission")" class="block px-4 py-2 text-sm text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-midnight-800">Assign User Permission</a>}
                                        @if (Session["ViewAllEmpUser"]?.ToString() == "True")
                                        {<a href="@Url.Action("EmpUserView", "UserPermission")" class="block px-4 py-2 text-sm text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-midnight-800">View All Employee Users</a>}
                                    </div>
                                </div>
                            }}

                        <!-- Assessment Master -->
                        @{ if (Session["Asqview"] != null || Session["AssNew"] != null)
                            {
                                <div class="relative group">
                                    <button class="flex items-center space-x-1 px-4 py-2 rounded-lg text-sm font-semibold text-slate-600 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-midnight-800">
                                        <span>Assessment Master</span>
                                        <i data-lucide="chevron-down" class="w-4 h-4 text-slate-400"></i>
                                    </button>
                                    <div class="header-dropdown w-64 bg-white dark:bg-midnight-900 border border-slate-200 dark:border-midnight-800 rounded-xl shadow-2xl py-2 mt-1">
                                        @if (Session["Asqview"]?.ToString() == "True")
                                        {<a href="@Url.Action("ViewAllQuest", "Assesment")" class="block px-4 py-2 text-sm text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-midnight-800">View All Questions</a>}
                                        @if (Session["AssNew"]?.ToString() == "True")
                                        {<a href="@Url.Action("AssignNewAssement", "Assesment")" class="block px-4 py-2 text-sm text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-midnight-800">Assign New Master</a>}
                                    </div>
                                </div>
                            }}
                    </nav>
                </div>

                <div class="flex items-center space-x-5">
                    <!-- Theme Toggle -->
                    <button id="theme-toggle" class="p-2 rounded-lg hover:bg-slate-100 dark:hover:bg-midnight-800 text-slate-600 dark:text-slate-400 transition-colors">
                        <i data-lucide="sun" id="sun-icon" class="w-5 h-5 hidden"></i>
                        <i data-lucide="moon" id="moon-icon" class="w-5 h-5"></i>
                    </button>

                    <!-- Profile Section -->
                    <div class="relative group cursor-pointer flex items-center space-x-3 pl-4 border-l border-slate-200 dark:border-midnight-800">
                        <div class="text-right hidden sm:block">
                            <p class="text-xs text-slate-400 font-bold uppercase tracking-tighter">Welcome,</p>
                            <p class="text-sm font-extrabold text-slate-800 dark:text-slate-100">@Session["descript"]</p>
                        </div>
                        <div class="w-10 h-10 rounded-full border-2 border-white dark:border-midnight-800 bg-slate-200 dark:bg-midnight-800 overflow-hidden shadow-lg">
                            @if (Session["ProfilePic"] != null)
                            {
                                <img src="~/Content/Uploads/EmpUserProfile/@Session["ProfilePic"].ToString()" class="w-full h-full object-cover" />
                            }
                            else
                            {
                                <div class="w-full h-full flex items-center justify-center text-slate-400"><i data-lucide="user"></i></div>
                            }
                        </div>

                        <!-- Profile Dropdown -->
                        <div class="absolute right-0 top-full mt-2 w-60 bg-white dark:bg-midnight-900 border border-slate-200 dark:border-midnight-800 rounded-2xl shadow-2xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 py-3 z-50">
                            <div class="px-5 py-2 border-b border-slate-50 dark:border-midnight-800 mb-2">
                                <p class="text-[10px] font-bold text-primary-600 uppercase tracking-widest">Account Settings</p>
                            </div>
                            <a href="@Url.Action("ChangeProfile", "Home")" class="flex items-center px-5 py-2.5 text-sm text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-midnight-800">
                                <i data-lucide="user" class="w-4 h-4 mr-4 text-slate-400"></i> Edit Profile
                            </a>
                            <a href="@Url.Action("ChangePassword", "Home")" class="flex items-center px-5 py-2.5 text-sm text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-midnight-800">
                                <i data-lucide="key" class="w-4 h-4 mr-4 text-slate-400"></i> Change Password
                            </a>
                            <div class="my-2 border-t border-slate-50 dark:border-midnight-800"></div>
                            <a href="@Url.Action("Index", "Home")" class="flex items-center px-5 py-2.5 text-sm text-red-500 hover:bg-red-50 dark:hover:bg-red-900/20 font-bold">
                                <i data-lucide="log-out" class="w-4 h-4 mr-4"></i> Sign Out
                            </a>
                        </div>
                    </div>
                </div>
            </header>

            <!-- BODY CONTAINER -->
            <div class="p-8 overflow-y-auto" style="height: calc(100vh - 4rem);">
                <div class="max-w-[1600px] mx-auto">
                    @RenderBody()
                </div>
            </div>

            <!-- FOOTER -->
            <footer class="py-4 px-8 border-t border-slate-100 dark:border-midnight-800 text-center text-xs text-slate-400 bg-white dark:bg-midnight-900 transition-colors">
                <div class="flex items-center justify-center space-x-2">
                    <span>&copy; @DateTime.Now.Year Indus Group</span>
                    <span class="text-slate-200 dark:text-midnight-800">|</span>
                    <a href="http://indussoftwareservices.com/" class="text-primary-600 dark:text-primary-400 font-bold hover:underline">Indus Software Services</a>
                    <span class="text-slate-200 dark:text-midnight-800">|</span>
                    <span>System v4.8</span>
                </div>
            </footer>
        </main>
    </div>

    <!-- SCRIPTS -->
    <script>
        lucide.createIcons();

        // Theme Toggle Logic
        const html = document.documentElement;
        const sunIcon = document.getElementById('sun-icon');
        const moonIcon = document.getElementById('moon-icon');

        const updateIcons = (isDark) => {
            if (isDark) {
                sunIcon.classList.remove('hidden');
                moonIcon.classList.add('hidden');
            } else {
                sunIcon.classList.add('hidden');
                moonIcon.classList.remove('hidden');
            }
        };

        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            html.classList.add('dark');
            updateIcons(true);
        }

        document.getElementById('theme-toggle').addEventListener('click', () => {
            html.classList.toggle('dark');
            const isDark = html.classList.contains('dark');
            localStorage.theme = isDark ? 'dark' : 'light';
            updateIcons(isDark);
        });

        // Sidebar Controls
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('-translate-x-full');
            if (window.innerWidth >= 768) {
                sidebar.classList.toggle('md:hidden');
            }
        }

        function toggleSubmenu(id) {
            const menu = document.getElementById(id);
            const icon = document.getElementById(id + '-icon');
            menu.classList.toggle('show');
            icon.classList.toggle('rotate-90');
        }
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>