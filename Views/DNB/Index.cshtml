<!-- Chart.js and Data Labels Plugin -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.2.0/dist/chartjs-plugin-datalabels.min.js"></script>

<script>
    window.dnbSummaryData = {
        verifiedCount: @verifiedCount,
        pendingCount: @pendingCount,
        rejectedCount: @rejectedCount
    };

    const PRIMARY_COLOR = '#4A4A9A';
    const PENDING_COLOR = '#FFB300';
    const REJECTED_COLOR = '#E53935';

    $(document).ready(function () {
        var table = $('#reportTable').DataTable({
            responsive: true,
            lengthChange: true,
            ordering: true,
            pageLength: 10,
            dom: '<"row mb-3"<"col-md-6"B><"col-md-6"f>>rt<"row mt-3"<"col-md-6"i><"col-md-6"p>>',
            buttons: [
                { extend: 'copy', className: 'btn btn-outline-secondary btn-sm', text: '<i class="bi bi-clipboard"></i> Copy' },
                { extend: 'csv', className: 'btn btn-outline-primary btn-sm', text: '<i class="bi bi-filetype-csv"></i> CSV' },
                { extend: 'excel', className: 'btn btn-outline-success btn-sm', text: '<i class="bi bi-file-earmark-excel"></i> Excel' },
                { extend: 'pdf', className: 'btn btn-outline-danger btn-sm', text: '<i class="bi bi-file-earmark-pdf"></i> PDF' },
                { extend: 'print', className: 'btn btn-outline-dark btn-sm', text: '<i class="bi bi-printer"></i> Print' },
                { extend: 'colvis', className: 'btn btn-outline-info btn-sm', text: '<i class="bi bi-columns-gap"></i> Columns' }
            ],
            columnDefs: [{ type: 'num-fmt', targets: 3 }]
        });

        table.buttons().container().appendTo('#reportTable_wrapper .col-md-6:eq(0)');
    });

    const ctx = document.getElementById('statusChart');
    Chart.register(ChartDataLabels);

    new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: ['Verified', 'Pending', 'Rejected'],
            datasets: [{
                data: [
                    window.dnbSummaryData.verifiedCount,
                    window.dnbSummaryData.pendingCount,
                    window.dnbSummaryData.rejectedCount
                ],
                backgroundColor: [PRIMARY_COLOR, PENDING_COLOR, REJECTED_COLOR],
                borderColor: ['#fff', '#fff', '#fff'],
                borderWidth: 4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        color: '#212529',
                        font: { size: 12, weight: '600' }
                    }
                },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            const label = context.label || '';
                            const value = context.parsed;
                            const dataArray = context.dataset.data;
                            const total = dataArray.reduce((a, b) => a + b, 0);
                            const percentage = total > 0 ? ((value / total) * 100).toFixed(1) : 0;
                            return ` ${label}: ${value} (${percentage}%)`;
                        }
                    }
                },
                datalabels: {
                    color: (context) => {
                        const label = context.chart.data.labels[context.dataIndex];
                        return label === 'Pending' ? '#333' : '#fff';
                    },
                    textAlign: 'center',
                    font: {
                        weight: 'bold',
                        size: 13
                    },
                    formatter: (value, context) => {
                        return value > 0 ? value : '';
                    }
                }
            }
        }
    });

   
</script>
