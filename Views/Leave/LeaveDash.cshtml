@{
    ViewBag.Title = "LeaveDash";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="card-title shadow-lg" style="color:black;font-weight:bold;font-size:large" align="center">Your leave view</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <div class="card" style="box-shadow:rgb(231 237 236)5px 5px">
                <div class="card-body" align="center">
                    <h3 class="card-title">@ViewBag.PaidLeave.ToString()</h3>                   
                    <h5>WithoutPay</h5>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card" style="box-shadow:rgb(231 237 236)5px 5px">
                <div class="card-body" align="center">
                    <h4 class="card-title">@ViewBag.MarriageL</h4>
                    <h5>Marriage</h5>                   
                </div>
            </div>
        </div>     
        <div class="col-md-2">
            <div class="card" style="box-shadow:rgb(231 237 236)5px 5px">
                <div class="card-body" align="center">
                    <h4 class="card-title">@ViewBag.CL</h4>
                    <h5>@ViewBag.Cltxt</h5>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card" style="box-shadow:rgb(231 237 236)5px 5px">
                <div class="card-body" align="center">
                    <h4 class="card-title">@ViewBag.CompL</h4>
                    <h5>Compassionate</h5>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card" style="box-shadow:rgb(231 237 236)5px 5px">
                <div class="card-body" align="center">
                    <h4 class="card-title">@ViewBag.SL</h4>
                    <h5>@ViewBag.SLtxt</h5>
                </div>
            </div>
        </div>
        @*<div class="col-md-2">
            <div class="card" style="box-shadow:rgb(231 237 236)5px 5px">
                <div class="card-body" align="center">
                    <h4 class="card-title">@ViewBag.GPHoliday</h4>
                    <h5>General public</h5>
                </div>
            </div>
        </div>*@
    </div>
</div>

<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="badge badge-success" style="color: black; box-shadow: rgb(231 237 236)5px 5px">
                    <h4>
                        <a class="fa fa-hand-point-right" style="color:black;font-weight:bold" href="@Url.Action("ApplyLeave", "Leave")">&nbsp;
                            Click here to apply new leave
                        </a>
                    </h4>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card" style="color:black">
                <div class="badge badge-success" style="color:black;box-shadow:rgb(231 237 236)5px 5px">
                    <h4>
                        <a class="fa fa-hand-point-right" style="color:black;font-weight:bold" href="@Url.Action("AllLeave", "Leave")">&nbsp;
                            Click here to Archived leave
                        </a>
                    </h4>
                </div>
            </div>
        </div>
    </div>
</div>



            

