@model IEnumerable<HRM.Models.tblLetterOfferDetail>

@{
    ViewBag.Title = "IndexEmpOfferLetter";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<link href="//cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" rel="stylesheet" />
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">All Employee Offer Letter View</h3>
            @if (TempData["Error"] != null)
            {
                <p align="center" class="alert alert-danger" id="empty">@TempData["Error"]</p>
            }
            @if (ViewBag.Error != null)
            {
                <p align="center" class="alert alert-danger" id="empty">@ViewBag.Error</p>
            }
            @if (TempData["Success"] != null)
            {
                <p align="center" class="alert alert-success" id="empty">@TempData["Success"]</p>
            }
            @if (ViewBag.Success != null)
            {
                <p align="center" class="alert alert-success" id="success">@ViewBag.Success</p>
            }
            <div align="right">
                <a href="@Url.Action("EmpNewOffer", "Template")">
                    <div class="btn btn-primary">
                        <h6 align="center" class="fas fa-hand-point-right"></h6>
                        <h6 align="center" class="fas fa-plus">
                            Create New Offer Master
                        </h6>
                    </div>
                </a>
            </div>
            <div class="table" style="font-size:90%">
                <table id="OfferLetter" class="table table-sm col-12">
                    <thead class="bg-primary text-white col-12">
                        <tr>
                            <th>
                                Ref No.
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.vchEmpCode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.vchName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.vchFatherName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.tblDesignationMas.vchdesignation)
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    @if (ViewBag.Empty != null)
                    {
                        <p align="center" class="alert alert-danger" id="emptymsg">@ViewBag.Empty </p>
                    }
                    else
                    {
                        <tbody class="border border-primary">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.vchRefCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.vchEmpCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.vchName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.vchFatherName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tblDesignationMas.vchdesignation)
                                    </td>

                                    <td>
                                        @Html.ActionLink("Print", "PrintEmpOffer", new { id = item.intid }, htmlAttributes: new { @class = "btn btn-success btn-sm", @target = "_blank" })
                                        &nbsp;&nbsp;&nbsp;
                                        @Html.ActionLink("Edit", "EmpOfferEdit", new { id = item.intid }, htmlAttributes: new { @class = "btn btn-primary btn-sm" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="//cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#OfferLetter').DataTable();
        });
    </script>
}
