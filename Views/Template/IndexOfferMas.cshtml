@model IEnumerable<HRM.Models.tblLetterOfferMas>
@{
    ViewBag.Title = "IndexOfferMas";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">All Offer Master Letter View</h3>
            @if (TempData["Error"] != null)
            {
                <p align="center" class="alert alert-danger" id="empty">@TempData["Error"]</p>
            }
            @if (ViewBag.Error != null)
            {
                <p align="center" class="alert alert-danger" id="empty">@ViewBag.Error</p>
            }
            @if (TempData["Success"] != null)
            {
                <p align="center" class="alert alert-success" id="empty">@TempData["Success"]</p>
            }
            @if (ViewBag.Success != null)
            {
                <p align="center" class="alert alert-success" id="success">@ViewBag.Success</p>
            }


            <div align="right">
                <a href="@Url.Action("NewOfferMas", "Template")">
                    <div class="btn btn-primary">
                        <h6 align="center" class="fas fa-hand-point-right"></h6>
                        <h6 align="center" class="fas fa-plus">
                            Create New Offer Master
                        </h6>
                    </div>
                </a>
            </div>
            <div class="table" style="font-size:90%">
                <table class="table table-sm col-12">
                    <thead class="bg-primary text-white col-12">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.vchName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.vchMasType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.vchForGender)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.vchMasHeading)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.vchLetterCode)
                            </th>
                            <th>
                                Creation Date
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    @if (ViewBag.Empty != null)
                    {
                        <p align="center" class="alert alert-danger" id="emptymsg">@ViewBag.Empty</p>
                    }
                    else
                    {
                        <tbody class="border border-primary">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.vchName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.vchMasType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.vchForGender)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.vchMasHeading)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.vchLetterCode)
                                    </td>
                                    <td>
                                        @item.dtCreated.ToString("dd/MM/yyyy")
                                    </td>
                                    <td>                                       
                                        @Html.ActionLink("View", "OfferView", new { id = item.intid }, htmlAttributes: new { @class = "btn btn-success btn-sm" })                                      
                                            &nbsp;&nbsp;&nbsp;
                                        @Html.ActionLink("Edit", "EditLetterOfferMas", new { id = item.intid }, htmlAttributes: new { @class = "btn btn-primary btn-sm" })
                                    </td>

                                </tr>
                            }
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
