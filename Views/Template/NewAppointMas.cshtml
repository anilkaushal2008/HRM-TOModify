    @model HRM.Models.tblLetterAppointMas
@{ if (Session["descript"] != null)
    {
        {
            ViewBag.Title = "NewAppointMas";
            Layout = "~/Views/Shared/_LayoutMain.cshtml";
        }


        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
<div class="row">
    <div class="col-12" style="font-size:90%">
        <div class="card" style="background-color:aliceblue">
            <div class="card-body col-12">
                <h3 class="card-title">New Appointment Master View</h3>

                @if (TempData["Error"] != null)
                {
                    <p align="center" class="alert alert-danger" id="empty">@TempData["Error"]</p>
                }
                @if (ViewBag.Error != null)
                {
                    <p align="center" class="alert alert-danger" id="empty">@ViewBag.Error</p>
                }
                @if (TempData["Success"] != null)
                {
                    <p align="center" class="alert alert-success" id="empty">@TempData["Success"]</p>
                }
                @if (ViewBag.Success != null)
                {
                    <p align="center" class="alert alert-success" id="success">@ViewBag.Success</p>
                }

                <h6 class="card-subtitle"></h6>
                <div align="right">
                    <a href="@Url.Action("IndexAppointMas", "Template")"
                       class="btn btn-primary"><i class="fa fa-hand-point-right">&nbsp; View All Employee Appointment Letter</i></a>
                </div>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row col-12">
                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.vchMasType, htmlAttributes: new { @class = "control-label col-md-4 required" })
                            <div class="col-md-12">
                                @*@Html.DropDownListFor(model => model.vchMasType, ViewBag.Mastype as SelectList, "Select master type", htmlAttributes: new { @id = "selectedgender", @class = "form-control" })*@
                                @Html.DropDownListFor(model => model.vchMasType, ViewBag.AppointType as SelectList, "Select master type", htmlAttributes: new { @id = "Mtype", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.vchMasType, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.vchMasName, htmlAttributes: new { @class = "control-label col-md-6 required" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.vchMasName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.vchMasName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.vchForGender, htmlAttributes: new { @class = "control-label col-md-4 required" })
                            <div class="col-md-12">
                                @Html.DropDownListFor(model => model.vchForGender, ViewBag.GenderList as SelectList, "Select gender", htmlAttributes: new { @id = "selectedgender", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.vchForGender, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row col-12">
                    <div class="col-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.vchMasHeading, htmlAttributes: new { @class = "control-label col-md-6 required" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.vchMasHeading, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.vchMasHeading, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.vchMasLetterCode, htmlAttributes: new { @class = "control-label col-md-6 required" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.vchMasLetterCode, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.vchMasLetterCode, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row col-12">
                    <div class="col-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.TextMasContent, htmlAttributes: new { @class = "control-label col-md-12 required" })
                            <div class="col-md-12">
                                @Html.TextAreaFor(model => model.TextMasContent, htmlAttributes: new { @class = "form-control", @id = "content", @rows = "30", @size = "2500" })
                                @Html.ValidationMessageFor(model => model.TextMasContent, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row col-12">
                    <div class="col-12" align="center">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-success" />&nbsp;&nbsp;&nbsp;
                                <a class="btn btn-outline-danger" href="@Url.Action("IndexAppointMas","Template")">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
        }



    }
    else
    {
        Html.RenderAction("_SessionError1","Home");

    }
            }



        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
