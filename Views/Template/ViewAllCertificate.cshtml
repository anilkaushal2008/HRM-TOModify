@model IEnumerable<HRM.Models.tblTemplateDetail>
@if(Session["descript"]!=null)
 { 

{
    ViewBag.Title = "ViewAllCertificate";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            @if (TempData["Error"] != null)
            {
                <p align="center" class="alert alert-danger" id="error1">@TempData["Error"]</p>
            }
            @if (TempData["Success"] != null)
            {
                <p align="center" class="alert alert-success" id="successMessage">@TempData["Success"]</p>
            }
            @if (TempData["Success1"] != null)
            {
                <p align="center" class="alert alert-success" id="successMessage1">@TempData["Success1"]</p>
            }
            <h3 class="card-title">All Experience Letter View</h3>

            <div align="right">
                <a href="@Url.Action("NewLetter", "Template")">
                    <div class="btn btn-primary">
                        <h6 align="center" class="fas fa-hand-point-right"></h6>
                        <h6 align="center" class="fas fa-plus">
                            Create New Letter
                        </h6>
                    </div>
                </a>
            </div>
            <div class="table">
                <table class="table table-sm col-12">
                    <thead class="bg-primary text-white col-12">
                        <tr>
                            <th>
                                Ref. No.
                            </th>
                            <th>
                                Employee Name
                            </th>
                            <th>
                                Type
                            </th>
                            <th>
                                Creation Date
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    @if (TempData["Empty"] != null)
                    {
                        <p class="alert alert-danger" id="emptymsg">@TempData["Empty"]</p>
                    }
                    else
                    {
                        <tbody class="border border-primary">
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.vchRef_Code)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.vchEmpName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblTemplateMas.vchType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.dtCreated)
                                </td>
                                <td>
                                    @Html.ActionLink("View", "EmpCertificateDetail", new { id = item.intid }, new { target = "_blank" }) &nbsp;&nbsp;
                                    @Html.ActionLink("Edit", "EditEmpLetter", new { id = item.intid })
                                </td>
                            </tr>
                            }
                        </tbody>

                    }
                </table>
            </div>
        </div>
    </div>
</div>
}
else
{
    Html.RenderAction("_SessionError1", "Home");
}
@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

