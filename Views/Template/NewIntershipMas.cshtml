@model HRM.Models.tblIntershipMas
@{ if (Session["descript"] != null)
    {
        {
            ViewBag.Title = "NewIntershipMas";
            Layout = "~/Views/Shared/_LayoutMain.cshtml";
        }

    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="row">
    <div class="col-12" style="font-size:90%">
        <div class="card" style="background-color:aliceblue">
            <div class="card-body col-12">
                <h3 class="card-title">New Intership Master Letter View</h3>
                @if (TempData["Error"] != null)
                {
                    <p align="center" class="alert alert-danger" id="empty">@TempData["Error"]</p>
                }
                @if (ViewBag.Error != null)
                {
                    <p align="center" class="alert alert-danger" id="empty">@ViewBag.Error</p>
                }
                @if (TempData["Success"] != null)
                {
                    <p align="center" class="alert alert-success" id="empty">@TempData["Success"]</p>
                }
                @if (ViewBag.Success != null)
                {
                    <p align="center" class="alert alert-success" id="success">@ViewBag.Success</p>
                }

                <h6 class="card-subtitle"></h6>
                <div align="right">
                    <a href="@Url.Action("IndexInterShip", "Template")"
                       class="btn btn-primary"><i class="fa fa-hand-point-right">&nbsp; View All Intership Master Letter </i></a>
                </div>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row col-12">
                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.vchMasName, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.vchMasName, new { htmlAttributes = new { @placeholder= "Enter master name", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.vchMasName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.vchForGender, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="col-md-12">
                                @Html.DropDownListFor(model => model.vchForGender, ViewBag.GenderList as SelectList, "Select for gender", htmlAttributes: new { @id = "ForGender", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.vchForGender, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.vchLetterCode, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.vchLetterCode, new { htmlAttributes = new { @placeholder="Enter master code", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.vchLetterCode, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row col-12">
                    <div class="col-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.vchLetterHeading, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.vchLetterHeading, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.vchLetterHeading, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row col-12">
                    <div class="col-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.txtMasContent, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="col-md-12">
                                @Html.TextAreaFor(model => model.txtMasContent, htmlAttributes: new { @class = "form-control", @id = "Content", @rows = "30", @size = "2500" })
                                @Html.ValidationMessageFor(model => model.txtMasContent, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row col-12">
                    <div class="col-12" align="center">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-success" />&nbsp;&nbsp;&nbsp;
                                <a class="btn btn-outline-danger" href="@Url.Action("IndexInterShip", "Template")">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    }
}
else
{
    Html.RenderAction("_SessionError1", "Home");
}
}
@section Scripts {
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
