@model IEnumerable<HRM.Models.tblExperienceDetail>


@{
    ViewBag.Title = "ViewEmpExpAll";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<link href="//cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" rel="stylesheet" />
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">All Employee Experience Letter View</h3>
            <div align="right">
                <a href="@Url.Action("NewEmpExp", "Template")">
                    <div class="btn btn-primary btn-sm">
                        <h6 align="center" class="fas fa-hand-point-right"></h6>
                        <h6 align="center" class="fas fa-plus">
                            Create New Employee Letter
                        </h6>
                    </div>
                </a>
            </div>
            @if (TempData["Error"] != null)
            {
                <p align="center" class="alert alert-danger" id="empty">@TempData["Error"]</p>
            }
            @if (ViewBag.Error != null)
            {
                <p align="center" class="alert alert-danger" id="empty">@ViewBag.Error</p>
            }
            @if (TempData["Success"] != null)
            {
                <p align="center" class="alert alert-success" id="empty">@TempData["Success"]</p>
            }
            @if (ViewBag.Success != null)
            {
                <p align="center" class="alert alert-success" id="success">@ViewBag.Success</p>
            }
            <div class="table" style="font-size:90%">
                <table id="ExpLetter" class="table table-sm col-12">
                    <thead class="bg-primary text-white col-12">
                        <tr>
                            <th>
                                Ref No
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Father/Spouse
                            </th>
                            <th>
                                From Date
                            </th>
                            <th>
                                To Date
                            </th>
                            <th>
                                Relievied
                            </th>

                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    @if (ViewBag.Empty != null)
                    {
                        <p align="center" class="alert alert-danger" id="emptymsg">@ViewBag.Empty</p>
                    }
                    else
                    {
                        <tbody class="border border-primary">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.vchRefCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.vchName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.vchFatherName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.dtSdate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.dtEdate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.dtRelieving)
                                    </td>

                                    <td>
                                        @Html.ActionLink("Print", "EmpExperiencePrint", new { id = item.intid }, new { @class = "btn btn-success btn-sm", @target = "_blank" }) &nbsp;&nbsp;
                                        @{
                                            if (Session["MainAdmin"] != null)
                                            {
                                                //int id;
                                                string IsAdmin = Session["MainAdmin"].ToString();
                                                if (IsAdmin == "True")
                                                {
                                                    @Html.ActionLink("Edit", "EmpExpEdit", new { id = item.intid }, new { @class = "btn btn-primary btn-sm" })
                                                }
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="//cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#ExpLetter').DataTable();
        });
    </script>
}