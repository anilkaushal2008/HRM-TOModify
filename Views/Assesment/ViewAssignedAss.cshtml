@model IEnumerable<HRM.Models.tblEmpAssesmentMas>
@if (Session["descript"] != null)
{
    {
        ViewBag.Title = "ViewAssignedAss";
        Layout = "~/Views/Shared/_LayoutMain.cshtml";
    }

<div class="col-lg-12">
    @if (TempData["Success"] != null)
    {
        <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
    }
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Assigned assessment view</h3>        
                    <div align="right">
                        <a href="@Url.Action("ViewCompletedAss", "Assesment")">
                            <div class="btn btn-primary">
                                <h6 class="fas fa-hand-point-right"></h6>
                                <h6 align="center" class="fa fa-database">
                                    View completed assessment
                                </h6>
                            </div>
                        </a>
                    </div>          
                    <div class="table-responsive" style="font-size:90%">
                        <table class="table table-sm col-12">
                            <thead class="bg-primary text-white col-12">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.vchName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.vchMobile)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.decExperience)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.vchWorkedArea)
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="border border-primary">
                                @if (TempData["Empty"] != null)
                                {
                                    <p class="alert alert-danger" id="successMessage">@TempData["Empty"]</p>
                                }
                                else
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.vchName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.vchMobile)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.decExperience)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.vchWorkedArea)
                                            </td>

                                            <td>
                                                <a href="@Url.Action("FillAssesment", "Assesment", new { id = item.intid })">
                                                    <h6 align="center" class="fa fa-edit" data-placement="left" data-toggle="tooltip" data-original-title="Fill Assesment"></h6>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
    </div>
 </div>
}
else
{
    Html.RenderAction("_SessionError1", "Home");
}

@section scripts{
        <script src="~/Scripts/jquery.validate.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    }

