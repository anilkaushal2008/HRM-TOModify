@model IEnumerable<HRM.Models.tblEmpAssesmentMas>
@if (Session["descript"] != null)
{
    {
        ViewBag.Title = "ViewAllCompletedUploads";
        Layout = "~/Views/Shared/_LayoutMain.cshtml";
    }

    <br />
    <div class="col-lg-12">
        @if (TempData["Success"] != null)
        {
            <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
        }
        <div class="card">

            <div class="card-body">
                <h3 class="card-title">
                    All Completed Uploads For Authorization
                </h3>
                <div class="table-responsive" style="font-size:90%">
                    <table class="table table-sm col-12">
                        <thead class="bg-success text-white col-12">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.vchName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.vchMobile)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.decExperience)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.dtcreated)
                                </th>

                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody class="border border-primary">
                            @if (TempData["Error"] != null)
                            {
                                <p class="alert alert-danger" id="successMessage">@TempData["Error"]</p>
                            }
                            else
                            {

                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.vchName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.vchMobile)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.decExperience)
                                        </td>

                                        <td>
                                            @Convert.ToDateTime(item.dtcreated).ToString("dd/MM/yyyy")
                                        </td>

                                        <td>
                                            <a href="@Url.Action("ViewCompDocEmp", "Assesment", new { id = item.intid })">
                                                <h6 align="center" class="fa fa-list"  data-toggle="tooltip" data-placement="left" title="View Details Document"></h6>
                                            </a>&nbsp;&nbsp;&nbsp;&nbsp;
                                            @{string enteroffi = Session["AllowFillOfficial"].ToString();
                                                if (enteroffi == "True")
                                             {
                                            <a href="@Url.Action("OfficialDetails", "AddNewEmp", new { id = item.intid })">
                                                <h6 align="center" class="fa fa-indent" data-placement="left" data-toggle="tooltip" title="Send for authorization"></h6>
                                            </a>  }
                                                }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
else
{
    Html.RenderAction("_SessionError1", "Home");
}

@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
