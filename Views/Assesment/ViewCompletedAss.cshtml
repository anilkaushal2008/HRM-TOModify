@model IEnumerable<HRM.Models.tblEmpAssesmentMas>
@if (Session["descript"] != null)
{
    {
        ViewBag.Title = "ViewCompletedAss";
        Layout = "~/Views/Shared/_LayoutMain.cshtml";
    }
    <div class="col-lg-12">
        @if (TempData["Success"] != null)
        {
            <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
        }
        @if (TempData["Error"] != null)
        {
            <p class="alert alert-danger" id="emptyMessage">@TempData["Error"]</p>
        }
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Completed assesment view</h3>
                @*<div align="right">
                    <a href="@Url.Action("ViewAssignedAss", "Assesment")">
                        <div class="btn btn-primary">
                            <h6 class="fas fa-hand-point-right"></h6>
                            <h6 align="center" class="fa fa-plus">
                                Return back to assigned assesment
                            </h6>
                        </div>
                    </a>
                </div>*@
                <div class="table-responsive" style="font-size:90%">
                    <table class="table table-sm col-12">
                        <thead class="bg-primary text-white col-12">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.vchName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.vchMobile)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.decExperience)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.vchWorkedArea)
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>

                        <tbody class="border border-primary">
                            @if (TempData["Empty"] != null)
                            {
                                <p class="alert alert-danger" id="successMessage">@TempData["Empty"]</p>
                            }
                            else
                            {
                                foreach (var item in Model)
                                {
                                    <tr style="text-decoration-color:black">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.vchName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.vchMobile)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.decExperience)Yr
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.vchWorkedArea)
                                        </td>
                                        <td>
                                            @*@{ string asscomview = Session["AssStatusDetail"].ToString();
                                                if (asscomview == "True")
                                                {*@
                                            <a href="@Url.Action("SingleAssesmentDetails", "Assesment", new { id = item.intid })">
                                                <h6 align="center" class="fa fa-file-archive" data-placement="right" data-toggle="tooltip" data-original-title="Details"></h6>
                                            </a>
                                                    @*}
                                                }*@
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
else
{
    Html.RenderAction("_SessionError1", "Home");
}

@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

