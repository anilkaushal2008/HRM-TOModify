@model HRM.Models.AssDeactiveViewModel

@{
    ViewBag.Title = "DeactiveAssesment";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<h2>DeactiveAssesment</h2>

@using (Html.BeginForm("DeactiveAssesment", "Assesment",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Assessment deactivation view</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.ID)
    <div class="form-group">
        @Html.Label("Selected Candidate", htmlAttributes: new { @class = "control-label col-md-8" })
        <div class="col-md-10" style="color:black">
           @Html.Label("",(string)ViewBag.EmpName, htmlAttributes:new { @class="form-control"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</div>
}

