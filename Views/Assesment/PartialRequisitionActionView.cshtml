@model HRM.Models.RequisitionAuthoriseModel
    @{ 
        Html.EnableClientValidation(true);
        Layout = "";
    }
@if (Session["descript"] != null)
{
    
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)
    <h4 style="color:black; font-weight: bold;color:Highlight">Requisition Actions</h4>
    <div id="mainAction">
        <div class="form-group" align="center">
            <h5 class="card-title" style="color:black;font-weight:bold">Are you wish to approve/forward/Cancel requisition<span style="color:crimson">*</span></h5>
            <fieldset class="radio" id="allradio" style="color:black">
                <label class="radio" id="author">
                    Approved
                    @Html.RadioButtonFor(model => model.bitAction, "Approved", htmlAttributes: new { id = "chkyes", @class = "radio" })
                </label><br />
                <label class="radio">
                    Forward to Higher Management
                    @Html.RadioButtonFor(model => model.bitAction, "Forward", htmlAttributes: new { id = "chkno", @class = "radio" })
                </label><br />
                Cancel
                <label class="radio">
                    @Html.RadioButtonFor(model => model.bitAction, "Cancel", htmlAttributes: new { id = "chkreconsider", @class = "radio" })
                    @*<input type="radio" value="Reconsider" id="reconsider" name="reconsider" dirname="author"/>*@
                </label><br />
                @Html.ValidationMessageFor(model => model.bitAction, "", new { @class = "text-danger" })
            </fieldset>
        </div>
        <div>
            <h5 style="color:black" class="required">Select approved date</h5>
            @Html.EditorFor(model => model.dtApproved, new { htmlAttributes = new { @type = "date", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.dtApproved, "", new { @class = "text-danger" })
            <br />
        </div>
        <div>
            <h5 style="color:black">Enter remarks<span style="color:red"> (max length 500 characters)</span></h5>
            @Html.TextAreaFor(model => model.vchRemarks, htmlAttributes: new { @id = "txtcancel", @class = "form-control", @rows = "7", @size = "1500" })
            @Html.ValidationMessageFor(model => model.vchRemarks, "", new { @class = "text-danger" })
            <br />
        </div>
    </div>

    <div align="center">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" id="postdata" class="btn btn-outline-success" />
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <a class="btn btn-outline-dark" href="@Url.Action("ViewRequisition", "Assesment")"> Back </a>
            </div>
        </div>
    </div>
</div>
    }
}

