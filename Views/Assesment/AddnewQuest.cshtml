@model HRM.Models.tblAssQuestMas

@{
    ViewBag.Title = "AddnewQuest";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <br />
    <h3 class="card-title" style="color:black">Add new question master view</h3>
    @if (TempData["Success"] != null)
    {
        <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
    }
    @if (TempData["Error"] != null)
    {
        <p class="alert alert-danger" id="errormsg">@TempData["Error"]</p>
    }
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Enter question", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.vchQuestion, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.vchQuestion, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Select answer type", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.vchAnsType, new SelectList(ViewBag.Type, "Text", "Value", "Select answer type"), htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.vchAnsType, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
            @{ string Qview = Session["Asqview"].ToString();
                if (Qview == "True")
                {
                    <div align="center">
                        <a href="@Url.Action("ViewAllQuest", "Assesment")">
                            <div class="btn btn-primary">
                                <h6 align="center" class="fas fa-hand-point-right">
                                    View all questions
                                </h6>
                            </div>
                        </a>
                    </div>
                    }
                }
                </div>
    </div>
</div>
}
@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
