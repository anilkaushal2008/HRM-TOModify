@model HRM.Models.tblAssQuestMas
@if (Session["descript"] != null)
{
    {
        ViewBag.Title = "QMasEdit";
        Layout = "~/Views/Shared/_LayoutMain.cshtml";
    }


using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.intqid)

        <div class="form-group">
            @Html.Label("Update question", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.vchQuestion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.vchQuestion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Update answer", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.vchAnsType, new SelectList (ViewBag.Type,"Text","Value"), htmlAttributes: new { @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.vchAnsType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

}
