@if (Session["descript"] != null)
{
    {
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_LayoutMain.cshtml";
    }

    <!-- Header Section -->
    <div class="mb-8 flex flex-col md:flex-row md:items-end justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-slate-800 dark:text-white">Hello, @Session["descript"].ToString()!</h1>
            <p class="text-slate-500 mt-1 flex items-center gap-2">
                <i data-lucide="shield-check" class="w-4 h-4 text-green-500"></i>
                Consultant Management System Dashboard
            </p>
        </div>
        <div class="flex items-center gap-3">
            <span class="px-4 py-2 bg-indigo-50 dark:bg-indigo-900/20 text-indigo-600 dark:text-indigo-400 rounded-lg text-sm font-semibold border border-indigo-100 dark:border-indigo-900/30">
                @DateTime.Now.ToString("dd MMM yyyy")
            </span>
        </div>
    </div>

    if (ViewBag.Message != null)
    {
        <div class="mb-6 p-4 bg-blue-50 border-l-4 border-blue-500 text-blue-700 rounded-r-lg flex items-center gap-3 shadow-sm">
            <i data-lucide="info" class="w-5 h-5"></i>
            <span>@ViewBag.Message</span>
        </div>
    }

    <!-- Stat Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">

        <!-- Assigned Assessment -->
        @if (Session["AssAssigned"]?.ToString() == "True")
        {
            <div class="bg-white dark:bg-darkCard p-6 rounded-2xl shadow-sm border border-slate-100 dark:border-slate-700 hover:shadow-md transition-all group">
                <div class="flex items-center justify-between mb-4">
                    <div class="p-3 bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 rounded-xl">
                        <i data-lucide="file-text" class="w-6 h-6"></i>
                    </div>
                    <span class="text-2xl font-bold">@ViewBag.AssigendCount</span>
                </div>
                <h3 class="text-slate-500 dark:text-slate-400 text-sm font-medium">Assigned Assessments</h3>
                <a href="@Url.Action("ViewAssignedAss", "Assesment")" class="mt-4 flex items-center text-xs font-semibold text-blue-600 hover:gap-2 transition-all">
                    View Details <i data-lucide="arrow-right" class="w-3 h-3 ml-1"></i>
                </a>
            </div>
        }

        <!-- Pending Requisition -->
        @if (Session["AssignedRequisition"]?.ToString() == "True")
        {
            <div class="bg-white dark:bg-darkCard p-6 rounded-2xl shadow-sm border border-slate-100 dark:border-slate-700 hover:shadow-md transition-all">
                <div class="flex items-center justify-between mb-4">
                    <div class="p-3 bg-purple-100 dark:bg-purple-900/30 text-purple-600 dark:text-purple-400 rounded-xl">
                        <i data-lucide="layers" class="w-6 h-6"></i>
                    </div>
                    <span class="text-2xl font-bold">@ViewBag.Requisition</span>
                </div>
                <h3 class="text-slate-500 dark:text-slate-400 text-sm font-medium">Pending Requisition</h3>
                <a href="@Url.Action("ViewRequisition", "Assesment")" class="mt-4 flex items-center text-xs font-semibold text-purple-600 hover:gap-2 transition-all">
                    View Requisition <i data-lucide="arrow-right" class="w-3 h-3 ml-1"></i>
                </a>
            </div>
        }

        <!-- Leave For Approval -->
        @if (Session["AssignedLeave"]?.ToString() == "True")
        {
            <div class="bg-white dark:bg-darkCard p-6 rounded-2xl shadow-sm border border-slate-100 dark:border-slate-700 hover:shadow-md transition-all">
                <div class="flex items-center justify-between mb-4">
                    <div class="p-3 bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400 rounded-xl">
                        <i data-lucide="clock" class="w-6 h-6"></i>
                    </div>
                    <span class="text-2xl font-bold text-green-600">@ViewBag.LeaveCount</span>
                </div>
                <h3 class="text-slate-500 dark:text-slate-400 text-sm font-medium">New Leave Approval</h3>
                <a href="@Url.Action("AssignedLeave", "Dashboard")" class="mt-4 flex items-center text-xs font-semibold text-green-600 hover:gap-2 transition-all">
                    Approve Now <i data-lucide="arrow-right" class="w-3 h-3 ml-1"></i>
                </a>
            </div>
        }

        <!-- Active Employees -->
        @if (Session["ViewActiveEmp"]?.ToString() == "True")
        {
            <div class="bg-white dark:bg-darkCard p-6 rounded-2xl shadow-sm border border-slate-100 dark:border-slate-700 hover:shadow-md transition-all">
                <div class="flex items-center justify-between mb-4">
                    <div class="p-3 bg-orange-100 dark:bg-orange-900/30 text-orange-600 dark:text-orange-400 rounded-xl">
                        <i data-lucide="user-check" class="w-6 h-6"></i>
                    </div>
                    <span class="text-2xl font-bold">@ViewBag.ActiveCount</span>
                </div>
                <h3 class="text-slate-500 dark:text-slate-400 text-sm font-medium">Total Active Employees</h3>
                <a href="@Url.Action("ActiveView", "Dashboard")" class="mt-4 flex items-center text-xs font-semibold text-orange-600 hover:gap-2 transition-all">
                    View Employee List <i data-lucide="arrow-right" class="w-3 h-3 ml-1"></i>
                </a>
            </div>
        }
    </div>

    <!-- Announcement & Marquee Section -->
    <div class="mt-10 grid grid-cols-1 lg:grid-cols-3 gap-8">

        <!-- Important Notifications -->
        <div class="lg:col-span-2 space-y-6">
            <div class="bg-white dark:bg-darkCard rounded-2xl shadow-sm border border-slate-100 dark:border-slate-700 overflow-hidden">
                <div class="px-6 py-4 bg-indigo-600 text-white flex items-center justify-between">
                    <h3 class="font-bold flex items-center gap-2">
                        <i data-lucide="megaphone" class="w-5 h-5"></i>
                        New HR Updates
                    </h3>
                </div>
                <div class="p-6">
                    <div class="p-4 bg-indigo-50 dark:bg-slate-800 rounded-xl mb-6">
                        <marquee behavior="scroll" direction="left" class="text-indigo-700 dark:text-indigo-300 font-bold italic">
                            Effective 01-January-2025, all leave applications must be submitted through the HRMS dashboard. Hard copy submissions will no longer be accepted.
                        </marquee>
                    </div>

                    @if (Session["HrAdmin"]?.ToString() == "True")
                    {
                        <div class="space-y-4">
                            <div class="flex items-center justify-between p-3 border-b border-slate-100 dark:border-slate-800">
                                <span class="text-sm font-medium text-slate-600 dark:text-slate-300">Pending Partial Authorizations</span>
                                <span class="px-2 py-1 bg-red-100 text-red-600 text-xs font-bold rounded-full">@ViewBag.PartialAuthorisedCount</span>
                            </div>
                            <div class="flex items-center justify-between p-3 border-b border-slate-100 dark:border-slate-800">
                                <span class="text-sm font-medium text-slate-600 dark:text-slate-300">Candidates for Final Update</span>
                                <span class="px-2 py-1 bg-blue-100 text-blue-600 text-xs font-bold rounded-full">@ViewBag.AuthorisedCount</span>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Demo Videos Section -->
            <div class="bg-white dark:bg-darkCard rounded-2xl shadow-sm border border-slate-100 dark:border-slate-700 p-6">
                <h3 class="text-lg font-bold mb-6 flex items-center gap-2 text-slate-800 dark:text-white">
                    <i data-lucide="video" class="w-5 h-5 text-red-500"></i>
                    Training & Demo Videos
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <a href="~/Content/DemoVideo/Employee_NewLeaveDemo.mp4" target="_blank" class="p-4 bg-slate-50 dark:bg-slate-800/50 rounded-xl hover:bg-indigo-50 dark:hover:bg-indigo-900/20 transition-all border border-transparent hover:border-indigo-100 group">
                        <i data-lucide="play-circle" class="w-8 h-8 text-indigo-500 mb-2"></i>
                        <p class="text-sm font-semibold group-hover:text-indigo-600">Employee Leave Demo</p>
                    </a>
                    <a href="~/Content/DemoVideo/DptHOD_LeaveDemo.mp4" target="_blank" class="p-4 bg-slate-50 dark:bg-slate-800/50 rounded-xl hover:bg-indigo-50 dark:hover:bg-indigo-900/20 transition-all border border-transparent hover:border-indigo-100 group">
                        <i data-lucide="play-circle" class="w-8 h-8 text-indigo-500 mb-2"></i>
                        <p class="text-sm font-semibold group-hover:text-indigo-600">HOD Approval Demo</p>
                    </a>
                    <a href="~/Content/DemoVideo/Hr_LeaveDemo.mp4" target="_blank" class="p-4 bg-slate-50 dark:bg-slate-800/50 rounded-xl hover:bg-indigo-50 dark:hover:bg-indigo-900/20 transition-all border border-transparent hover:border-indigo-100 group">
                        <i data-lucide="play-circle" class="w-8 h-8 text-indigo-500 mb-2"></i>
                        <p class="text-sm font-semibold group-hover:text-indigo-600">HR Manager Demo</p>
                    </a>
                </div>
            </div>
        </div>

        <!-- Right Sidebar (Alerts & Requests) -->
        <div class="space-y-6">
            @if (ViewBag.ConsultantRequest != "0" && (Session["MainAdmin"]?.ToString() == "True" || Session["ISVPHR"]?.ToString() == "True"))
            {
                <div class="bg-red-50 dark:bg-red-900/20 border border-red-100 dark:border-red-900/30 p-6 rounded-2xl relative overflow-hidden">
                    <i data-lucide="alert-circle" class="absolute -right-4 -bottom-4 w-24 h-24 text-red-500/10"></i>
                    <h4 class="text-red-700 dark:text-red-400 font-bold mb-2">Action Required</h4>
                    <p class="text-sm text-red-600 dark:text-red-300/80 mb-4">You have <b>@ViewBag.ConsultantRequest</b> pending consultant requests needing your attention.</p>
                    <a href="@Url.Action("ConsultantRequest", "Dashboard")" class="inline-flex items-center px-4 py-2 bg-red-600 text-white rounded-lg text-sm font-bold shadow-lg shadow-red-500/30">
                        View Requests
                    </a>
                </div>
            }

            <div class="bg-white dark:bg-darkCard rounded-2xl shadow-sm border border-slate-100 dark:border-slate-700 p-6">
                <h3 class="font-bold text-slate-800 dark:text-white mb-4">Quick Stats</h3>
                <div class="space-y-4">
                    <div class="flex items-center gap-3">
                        <div class="w-2 h-2 rounded-full bg-red-500"></div>
                        <div class="flex-grow text-sm text-slate-500">Red Flag Employees</div>
                        <div class="font-bold text-slate-800 dark:text-white">@ViewBag.RedFlagCount</div>
                    </div>
                    <div class="flex items-center gap-3">
                        <div class="w-2 h-2 rounded-full bg-blue-500"></div>
                        <div class="flex-grow text-sm text-slate-500">New Transferred</div>
                        <div class="font-bold text-slate-800 dark:text-white">@ViewBag.TransferCount</div>
                    </div>
                    <div class="flex items-center gap-3">
                        <div class="w-2 h-2 rounded-full bg-amber-500"></div>
                        <div class="flex-grow text-sm text-slate-500">Authorised Count</div>
                        <div class="font-bold text-slate-800 dark:text-white">@ViewBag.AuthorisedCount</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    Html.RenderAction("_SessionError1", "Home");
}

@section scripts {
    <script>
        $(document).ready(function () {
            // Stop marquee on hover
            $("marquee").hover(
                function () { this.stop(); },
                function () { this.start(); }
            );

            lucide.createIcons();
        });
    </script>
}