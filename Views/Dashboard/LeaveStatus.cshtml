@model IEnumerable<HRM.Models.tblLeaveApplicationDetail>
@if (Session["descript"] != null)
{
    {
        ViewBag.Title = "LeaveStatus";
        Layout = "~/Views/Shared/_LayoutMain.cshtml";
    }

<link href="//cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" rel="stylesheet" />
<div class="card">
    <div class="card-body">
        <div align="right">
            <a href="@Url.Action("ApprovedLeave", "Dashboard")" class="btn btn-success btn-sm fas fa-hand-point-right">
                Apporved Leave
            </a>
        </div>
        <h3 class="card-title" align="center">Leave status view</h3>
        @if (TempData["Success"] != null)
        {
            <p class="alert alert-success" id="success" align="center">@TempData["Success"]</p>
        }
        @if (TempData["Error"] != null)
        {
            <p class="alert alert-danger" id="error" align="center">@TempData["Error"]</p>
        }
        @if (ViewBag.Error != null)
        {
            <p class="alert alert-danger" id="verror" align="center">@ViewBag.Error</p>
        }
        <table id="allapproval" class="table table-sm" style="font-size:90%">
            <thead class="bg-success text-white col-12">
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        EmpCode
                    </th>
                    <th>
                        Mobile
                    </th>
                    <th>
                        DateFrom
                    </th>
                    <th>
                        ToDate
                    </th>
                    <th>
                        Request Days
                    </th>
                    <th>
                        CurrentStatus
                    </th>                   
                    <th>
                        AssignedTo
                    </th>
                </tr>
            </thead>
            <tbody class="border border-success">
                @if (TempData["Empty"] != null)
                {
                    <p class="alert alert-danger" id="empty" align="center">@TempData["Empty"]</p>
                }
                else
                {
                    foreach (var item in Model)
                    {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.tblLeaveApplication.tblEmpAssesmentMas.vchName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tblLeaveApplication.tblEmpAssesmentMas.vchEmpFcode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tblLeaveApplication.tblEmpAssesmentMas.vchMobile)
                </td>
            
                    <td>
                        @item.tblLeaveApplication.dtStartFrom.ToString("dd/MM/yyyy")
                    </td>
                
                       
                    <td>
                        @item.tblLeaveApplication.dtEndDate.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tblLeaveApplication.decdaysRequest)
                    </td>
                    <td>
                        @if (item.vchCurrentStatus == "Rejected")
                        {
                            <a class="badge badge-pill badge-danger text-white">@item.vchCurrentStatus</a>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.vchCurrentStatus)
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.vchAssignedUser)
                    </td>
                </tr>
                        }
                    }                
            </tbody>
        </table>
    </div>
</div>
}
else
{
    Html.RenderAction("_SessionError", "NewEmployeeLogin");
}
@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="//cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#allapproval').DataTable();
        });
    </script>
}

